# ============================================
# NBERIC Task Tracker - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ============================================
# Database Configuration (MariaDB)
# ============================================
# Database connection settings for Sequelize ORM
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nberic_task_tracker
DB_USER=nberic
DB_PASSWORD=admin@server

# ============================================
# JWT Authentication Configuration
# ============================================
# Secret key for signing JWT tokens
# IMPORTANT: Generate a strong random secret (minimum 32 characters)
# You can generate one using: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-strong-random-secret-minimum-32-characters-long-change-in-production

# Access token expiry (short-lived for security)
# Format: number + unit (s=seconds, m=minutes, h=hours, d=days)
JWT_ACCESS_EXPIRY=15m

# Refresh token expiry (long-lived)
# Format: number + unit (s=seconds, m=minutes, h=hours, d=days)
JWT_REFRESH_EXPIRY=7d

# ============================================
# Application Configuration
# ============================================
# Public URL of your application (used for CORS, cookies, etc.)
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Socket.IO server URL (optional, defaults to NEXT_PUBLIC_APP_URL)
# Only set if Socket.IO is on a different server/port
# NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# ============================================
# Node Environment
# ============================================
# Environment mode: development, production, or test
# This affects logging, error handling, and security settings
NODE_ENV=development

